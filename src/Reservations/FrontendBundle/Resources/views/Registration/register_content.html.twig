{% include 'ReservationsFrontendBundle:Reservations:header.html.twig' %}

<div class="dialog">
    <div class="panel panel-default">
        <p class="panel-heading no-collapse">{{ "reservations.frontend.register"|trans }}</p>
        <div class="panel-body">
            <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST">
                <div class="form-group">
                    <label>{{ "reservations.frontend.name"|trans }}</label>
                    {{ form_widget(form.firstName, { 'attr' : { 'class' : 'form-control' }}) }}
                    {{ form_errors(form.firstName) }}
                </div>
                <div class="form-group">
                    <label>{{ "reservations.frontend.last_name"|trans }}</label>
                    {{ form_widget(form.lastName, { 'attr' : { 'class' : 'form-control' }}) }}
                    {{ form_errors(form.lastName) }}
                </div>
                <div class="form-group">
                    <label>{{ "reservations.frontend.phone"|trans }}</label>
                    {{ form_widget(form.phone, { 'attr' : { 'class' : 'form-control numeric', 'placeholder' : 'Pvz: 863050505' }}) }}
                    {{ form_errors(form.phone) }}
                </div>
                <div class="form-group">
                    <label>{{ "reservations.frontend.email"|trans }}</label>
                    {{ form_widget(form.email, { 'attr' : { 'class' : 'form-control' }}) }}
                    {{ form_errors(form.email) }}
                </div>
                <div class="form-group">
                    <label>{{ "reservations.frontend.password"|trans }}</label>
                    {{ form_widget(form.plainPassword.first, { 'attr' : { 'class' : 'form-control' }}) }}
                    {{ form_errors(form.plainPassword.first) }}
                </div>
                <div class="form-group">
                    <label>{{ "reservations.frontend.password_repeat"|trans }}</label>
                    {{ form_widget(form.plainPassword.second, { 'attr' : { 'class' : 'form-control' }}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form._token) }}
                    <input type="submit" value="{{ "reservations.frontend.register_button"|trans }}" class="btn btn-primary pull-right" />
                </div>
                <div class="clearfix"></div>
                * būtina užpildyti visus laukus
            </form>
        </div>
    </div>
    <a href="{{ path('fos_user_security_login') }}" class="btn btn-primary btn-lg btn-block">{{ "reservations.frontend.back_login"|trans }}</a>
</div>
