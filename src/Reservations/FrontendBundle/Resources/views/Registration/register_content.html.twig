{% trans_default_domain 'FOSUserBundle' %}

{% include 'ReservationsFrontendBundle:Reservations:header.html.twig' %}

<div class="dialog">
    <div class="panel panel-default">
        <p class="panel-heading no-collapse">Sign Up</p>
        <div class="panel-body">
            <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST">
                <div class="form-group">
                    <label>Vardas</label>
                    {{ form_widget(form.firstName, { 'attr' : { 'class' : 'form-control' }}) }}
                    {{ form_errors(form.firstName) }}
                </div>
                <div class="form-group">
                    <label>Pavardė</label>
                    {{ form_widget(form.lastName, { 'attr' : { 'class' : 'form-control' }}) }}
                    {{ form_errors(form.lastName) }}
                </div>
                <div class="form-group">
                    <label>Telefono numeris</label>
                    {{ form_widget(form.phone, { 'attr' : { 'class' : 'form-control' }}) }}
                    {{ form_errors(form.phone) }}
                </div>
                <div class="form-group">
                    <label>El. paštas</label>
                    {{ form_widget(form.email, { 'attr' : { 'class' : 'form-control' }}) }}
                    {{ form_errors(form.email) }}
                </div>
                <div class="form-group">
                    <label>Slaptažodis</label>
                    {{ form_widget(form.plainPassword.first, { 'attr' : { 'class' : 'form-control' }}) }}
                    {{ form_errors(form.plainPassword.first) }}
                </div>
                <div class="form-group">
                    <label>Pakartoti slaptažodį</label>
                    {{ form_widget(form.plainPassword.second, { 'attr' : { 'class' : 'form-control' }}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form._token) }}
                    <input type="submit" value="Registruotis" class="btn btn-primary pull-right" />
                </div>
                <div class="clearfix"></div>
            </form>
        </div>
    </div>
</div>
