{% extends 'ReservationsFrontendBundle::layout.html.twig' %}

{% block title %}Verslui{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h2>Prisijungimas</h2>
                    <hr />
                    {% if error %}
                        <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <form action="{{ path("fos_user_security_check") }}" method="post" role="form">
                        <div class="form-group">
                            <label>El. paštas</label>
                            <input type="text" id="username" name="_username" required="required" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Slaptažodis</label>
                            <input type="password" id="password" name="_password" required="required" class="form-control" />
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        <button type="submit" id="_submit" name="_submit" class="btn btn-primary">Prisijungti</button>
                    </form>
                </div>
            </div>
        </div><!--Left-->

        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h2>Kas mes? Ir ką mes siūlom?</h2>
                    <hr />
                    Some tetxts
                    <a href="{{ path('fos_user_registration_register') }}" class="btn btn-primary btn-lg btn-block">Registracija</a>
                </div>
            </div>
        </div><!--Right-->
    </div>
{% endblock %}
