
{% include 'ReservationsFrontendBundle:Reservations:header.html.twig' %}

<div class="dialog">
    <div class="panel panel-default">
        <p class="panel-heading no-collapse">{{ "reservations.frontend.reset.password_reset"|trans }}</p>
        <div class="panel-body">
            <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                {% if invalid_username is defined %}
                    <div class="alert alert-danger" role="alert">
                        {{ "reservations.frontend.reset.bad_email"|trans }}
                    </div>
                {% endif %}
                <div class="form-group">
                    <label>{{ "reservations.frontend.email"|trans }}</label>
                    <input type="text" id="username" class="form-control" name="username" required="required" />
                </div>
                <div class="form-group">
                    <input type="submit" value="{{ "reservations.frontend.reset.send"|trans }}" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <a href="{{ path('fos_user_security_login') }}" class="btn btn-primary btn-lg btn-block">{{ "reservations.frontend.back_login"|trans }}</a>
</div>
